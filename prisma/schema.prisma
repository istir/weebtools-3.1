datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Files {
  id        Int    @id @default(autoincrement())
  fileName  String @unique
  folder    String
  url       String
  Timestamp BigInt
  tags       Tag[]
  fromSite String @default("")//since sqlite doesn't support string[], use a string and join with ','
}

model Tag {
  id       Int        @id @default(autoincrement())
  name     String
  folder   String
  fromSite String //since sqlite doesn't support string[], use a string and join with ','
  Files    Files[]
}

